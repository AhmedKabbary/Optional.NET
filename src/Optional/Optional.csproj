<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>Qode.Optional</PackageId>
        <Authors>Ahmed Kabbary</Authors>
        <Version>0.1.0</Version>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>Generic optional type for C# which supports JSON and BSON serialization</Description>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="MongoDB.Bson" Version="2.21.0"/>
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
